module SessionsHelper
 #log in dell'utente dato
 def log_in(user)
   session[:user_id] = user.id
 end
 
 # ritorna l'utente corrente se esiste
 def current_user
    @current_user ||= User.find_by(id: session[:user_id])
 end

 # Returns true if the user is logged in, false otherwise.
 def logged_in?
   !current_user.nil?
 end

end

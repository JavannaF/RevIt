<div class="well">

                    <div class="row">
                        <div class="col-md-12">
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star-empty"></span>
                            <%= review.user.name %>
                            <span class="pull-right">
                                <strong>Price:</strong><%= review.price %> <strong>Store:</strong><%= review.store %><strong>Store Location:</strong><%= review.store_location %>
                                <p>Posted <%= time_ago_in_words(review.created_at) %> ago.</p>
                            </span>
                            <p><%= review.comment %></p>
                            
                        </div>
                    </div>

                    <hr>
                    <p>
                            <%= link_to 'Destroy review', [review.item, review],
                                method: :delete,
                                data: { confirm: 'Are you sure?' } %>
                    </p>
</div>
<!-- jQuery -->
    <script src="app/assets/javascripts/jquery.js"></script>


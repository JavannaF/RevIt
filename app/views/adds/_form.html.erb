<%= @owner = current_owner %>
        <% if current_owner != nil %>
            <%= @add = @owner.adds.new %>
        <% end %>
        <%= form_for(@add) do |f| %>
            <% if @add.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(@add.errors.count, "error") %> prohibited this add from being saved:</h2>

                    <ul>
                    <% @add.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                    </ul>
                </div>
            <% end %>
    
<div class="container">
    <div class="well">
        
        <div class="row">
            <div class="col-md-9">
                
                <p>
                    <%= f.label :name %>
                    <%= f.text_field :name, class: 'form-control' %>
                </p>
                <p>
                    <%= f.label :description %>
                    <%= f.text_area :description, class: 'form-control' %>
                </p>
            </div>
                
            <div class="col-md-3">
                <%= f.label :price %>
                <%= f.text_field :price, class: 'form-control' %> 
                <p></p>
                <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png', class: "custom-file-input" %>
                
            </div>
            
        </div>

        <hr>
        
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <%= f.submit "Add Add", class: "btn btn-primary" %>
                </div>
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>
</div>
<% end %>



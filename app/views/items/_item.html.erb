<li id="item-<%= item.id %>">
<%= link_to gravatar_for(item.user), item.user %>
  <div class="row">
            <div class="col-md-7">
                <%= image_tag item.picture.url if item.picture? %>
            </div>
            <div class="col-md-5">
                <h3><%= item.name %></h3>
                <h4><%= item.avg_price %></h4>
                <p><%= item.description %></p>
                <a class="btn btn-primary" href="item">View Item <span class="glyphicon glyphicon-chevron-right"></span></a>
                <span class="timestamp">
                    Posted <%= time_ago_in_words(item.created_at) %> ago.
                    <% if current_user?(item.user) %>
                    <%= link_to "delete", item, method: :delete,
                                       data: { confirm: "You sure?" } %>
                </span>
            </div>
    </div>
    <!-- /.row -->

    <hr>
  
<% end %>
</li>





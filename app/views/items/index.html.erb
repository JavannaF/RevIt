<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>
    
    <div class="text-right">
        <a class="btn btn-primary" href="/items/new">New Item </span></a>
    </div>
    
    
    <% @items.each do |item| %>
    
    <div class="row">
        <div class="col-md-3">
            <% if !item.picture.present? %>
                <%= link_to image_tag("http://placehold.it/200x150"), item %> 
            <% else %>
                <%= link_to image_tag(item.picture.listing_items.url), item %> 
            <% end %>

        </div>
        
        <div class="text-left">
            <h3><%= link_to item.name,  item %></h3>
            <h4><%= item.avg_price %><%= item.avg_rating %></h4>
            <p><%= item.description %></p>
        </div>
            
    </div>
    <!-- /.row -->

    <hr>

<% end %>

 <tr> <% if !@items.present? %>
  <p>There are no items matching these features.</p> </tr>
<% end %>

<%= will_paginate  @items %>
</div>

  

<div class="container">
<p id="notice"><%= notice %></p>

<h1><%= t(:lista)+" "+t(:items) %></h1>
    
    <div class="text-right">
        <a class="btn btn-primary" href="/items/new"><%= t(:new)+" "+t(:item) %></span></a>
    </div>
    
    
    <% @items.each do |item| %>
    
    <div class="row">
        <div class="col-md-3">
            <a href="#">
                <img class="img-responsive" src="http://placehold.it/200x150" alt="">
            </a>
        </div>
        
        <div class="text-left">
            <h3><%= item.name %></h3>
            <h4><%= item.avg_price %><%= item.avg_rating %></h4>
            <p><%= item.description %></p>
            <%= link_to t(:view)+" "+t(:item), item_path(item.id) ,class: "btn btn-primary" %>
        </div>
            
    </div>
    <!-- /.row -->

    <hr>

<% end %>

 <tr> <% if !@items.present? %>
  <p><%= t(:nosearchitem) %></p> </tr>
<% end %>

<%= will_paginate  @items %>
</div>

  

<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>
    
    <div class="row">
        <div class="col-sm-4">
            <a class="btn btn-primary" href="/items/new">New Item </span></a>
        </div>
    </div>

    <% @items.each do |item| %>
    
      <div class="row">
            <div class="col-md-4">
                <a href="#">
                    <img class="img-responsive" src="http://placehold.it/200x150" alt="">
                </a>
            </div>
            <div class="col-md-4">
                <h3><%= item.name %></h3>
                <h4><%= item.avg_price %><%= item.avg_rating %></h4>
                <p><%= item.description %></p>
                <a class="btn btn-primary" href="item">View Item <span class="glyphicon glyphicon-chevron-right"></span></a>
            </div>
        </div>
        <!-- /.row -->

        <hr>

<% end %>

 <tr> <% if !@items.present? %>
  <p>There are no items matching these features.</p> </tr>
<% end %>

<%= will_paginate  @items %>
</div>

  
